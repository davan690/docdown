{
  "name": "docdown",
  "productName": "DocDown",
  "version": "0.1.0",
  "main": "main.js",
  "license": "ISC",
  "author": "Raphael Kabo",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.raphaelkabo.docdown",
    "asarUnpack": [
      "./app/node_modules/node-notifier/vendor/**"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "type": "distribution",
      "fileAssociations": [
        {
          "ext": [
            "md",
            "markdown",
            "txt"
          ],
          "description": "Markdown files",
          "role": "Converter"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-builder": "^20.38.4"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "command-exists": "^1.2.8",
    "electron-main-notification": "^1.0.1",
    "electron-settings": "^3.2.0",
    "electron-window": "^0.8.1",
    "jquery": "^3.3.1",
    "menubar": "^5.2.3",
    "mime-types": "^2.1.21",
    "node-pandoc": "^0.3.0"
  }
}
